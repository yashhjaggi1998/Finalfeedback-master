<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="345dp"
        android:layout_height="215dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:elevation="8dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="5dp"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_bright"
            android:orientation="vertical"
            android:padding="2dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="1dp">

                <TextView
                    android:id="@+id/textViewfieldname"
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/person"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="  Name"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:background="@drawable/border_card_text"
                    android:text="AAAAAAAAAAAAAA"
                    android:textAlignment="center"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/serviceid"
                    android:paddingHorizontal="10dp"

                    android:paddingVertical="4dp"
                    android:text=" Service id"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewservice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_card_text"
                    android:text="1234567"
                    android:textAlignment="center"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/phone"
                    android:paddingHorizontal="10dp"

                    android:paddingVertical="4dp"
                    android:text=" Number   "
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_card_text"
                    android:text="1234567890"
                    android:textAlignment="center"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/time"
                    android:paddingHorizontal="10dp"

                    android:paddingVertical="4dp"
                    android:text=" Time"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewtime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_card_text"
                    android:text="20:10:45"
                    android:textAlignment="center"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/date"
                    android:paddingHorizontal="10dp"

                    android:paddingVertical="4dp"
                    android:text=" Date"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewdate1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_card_text"
                    android:text="2018/09/21"
                    android:textAlignment="center"
                    android:textSize="24sp" />

            </LinearLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>